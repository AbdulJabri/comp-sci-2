package acsl.baseballStats;

public class Player {
	private String name;
	private int outs, singles, doubles, triples, HRs, Ks, BBs, HBPs, sacs;
	private double batAvg, OAB, SLG, OBP, totalBases;
	
	public Player(String n){
		name = n;
		outs = 0;
		singles = 0;
		doubles = 0;
		triples = 0;
		HRs = 0;
		Ks = 0;
		BBs = 0;
		HBPs = 0;
		sacs = 0;
		
	}

	// accessors
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getBatAvg() {
		return batAvg;
	}
	public double getOAB() {
		return OAB;
	}
	public double getSLG() {
		return SLG;
	}
	public double getOBP() {
		return OBP;
	}
	public double getTotalBases() {
		return totalBases;
	}

	// mutators
	public void setOuts(int outs) {
		this.outs = outs;
	}
	public void setSingles(int singles) {
		this.singles = singles;
	}
	public void setDoubles(int doubles) {
		this.doubles = doubles;
	}
	public void setTriples(int triples) {
		this.triples = triples;
	}
	public void setHRs(int hRs) {
		HRs = hRs;
	}
	public void setKs(int ks) {
		Ks = ks;
	}
	public void setBBs(int bBs) {
		BBs = bBs;
	}
	public void setHBPs(int hBPs) {
		HBPs = hBPs;
	}
	public void setSacs(int sacs) {
		this.sacs = sacs;
	}
}